		{
			"name": "Update a product",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let updatedTitle = \"UpdatedProduct_\" + Math.floor(Math.random() * 10000);\r",
							"pm.environment.set(\"updatedProductTitle\", updatedTitle);\r",
							"\r",
							"let res = pm.response.json();\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"  pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Title updated successfully\", function () {\r",
							"  pm.expect(res.title).to.eql(pm.environment.get(\"updatedProductTitle\"));\r",
							"});\r",
							"\r",
							"pm.test(\"ID remains the same\", function () {\r",
							"  pm.expect(res.id).to.eql(parseInt(pm.environment.get(\"createdProductId\")));\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
