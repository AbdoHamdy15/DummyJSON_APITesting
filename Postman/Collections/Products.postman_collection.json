		{
			"name": "Add a new product",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let title = \"Product_\" + Math.floor(Math.random() * 10000);\r",
							"pm.environment.set(\"productTitle\", title);\r",
							"\r",
							"let res = pm.response.json();\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"  pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Product title is correct\", function () {\r",
							"  pm.expect(res.title).to.eql(pm.environment.get(\"productTitle\"));\r",
							"});\r",
							"\r",
							"pm.test(\"Product ID is returned\", function () {\r",
							"  pm.expect(res.id).to.not.be.undefined;\r",
							"  pm.environment.set(\"createdProductId\", res.id);\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
